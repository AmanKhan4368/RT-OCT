<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- RT-OCT Icon (Application Logo) -->
    <ImageView
        android:id="@+id/rt_oct_icon"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:contentDescription="@string/rt_oct_icon"
        android:scaleType="centerInside"
        android:src="@drawable/rt_oct_icon" />

    <!-- Sign In Button -->
    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/rt_oct_icon"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_button"
        android:text="@string/sign_in"
        android:textColor="#2272B3"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- 'or' Text (Divider between buttons) -->
    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_button"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/or"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/or_text"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="@string/sign_up"
        android:textColor="#2272B3"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center" />

</RelativeLayout>
