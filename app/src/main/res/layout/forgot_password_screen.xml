<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Back Arrow Button -->
    <ImageButton
        android:id="@+id/back_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/back_arrow_icon"
        android:src="@drawable/back_arrow_icon"
        android:backgroundTint="@color/white"/>

    <!-- Lock Icon -->
    <ImageView
        android:id="@+id/lock_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/lock_icon"
        android:src="@drawable/lock_icon" />

    <!-- Forgot Password Text -->
    <TextView
        android:id="@+id/forgot_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lock_icon"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="@string/forgot_password_text"
        android:textSize="32sp"
        android:textColor="#094A80"
        android:textStyle="bold" />

    <!-- Background Rectangle -->
    <FrameLayout
        android:id="@+id/background_rectangle"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_rectangle_background" />

    <!-- Mobile Number Field -->
    <EditText
        android:id="@+id/mobile_number"
        android:layout_width="480dp"
        android:layout_height="50dp"
        android:layout_below="@id/forgot_password_text"
        android:layout_marginTop="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="none"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/phone_icon"
        android:hint="@string/mobile_number"
        android:inputType="number"
        android:textColorHint="#AFAFAF"
        android:padding="10dp"
        android:drawablePadding="20dp" />

    <!-- OTP Field -->
    <EditText
        android:id="@+id/otp"
        android:layout_width="480dp"
        android:layout_height="50dp"
        android:layout_below="@id/mobile_number"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="none"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/otp_icon"
        android:hint="@string/otp"
        android:inputType="number"
        android:textColorHint="#AFAFAF"
        android:padding="10dp"
        android:drawablePadding="20dp" />

    <!-- New Password Field -->
    <EditText
        android:id="@+id/new_password"
        android:layout_width="480dp"
        android:layout_height="50dp"
        android:layout_below="@id/otp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="none"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/padlock_icon"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:textColorHint="#AFAFAF"
        android:padding="10dp"
        android:drawablePadding="20dp" />

    <!-- Send OTP Button -->
    <Button
        android:id="@+id/sendOtpButton"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/new_password"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/button_color"
        android:text="@string/send_otp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Reset Password Button -->
    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/sendOtpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/button_color"
        android:text="@string/reset_password"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
