<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Number Display -->
    <LinearLayout
        android:id="@+id/number_display_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:elevation="6dp"
        android:clipToPadding="false">

        <EditText
            android:id="@+id/number_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="@string/enter_mobile_number"
            android:background="@null"
            android:inputType="phone"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backspace_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/number_backspace_icon"
            android:contentDescription="@string/backspace"
            app:tint="#2171B3" />
    </LinearLayout>

    <!-- Dial Pad -->
    <GridLayout
        android:id="@+id/dial_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_display_container"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:columnCount="3"
        android:rowCount="4">

        <!-- Buttons -->
        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_1"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_2"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_3"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_4"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_5"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_6"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_7"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_8"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_9"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_star"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_0"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/_hash"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2171B3" />
    </GridLayout>
</RelativeLayout>
