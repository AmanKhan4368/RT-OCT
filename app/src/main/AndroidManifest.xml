<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rt_oct">

<application
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/Theme.rt_oct">

    <!-- Main Activity -->
    <activity
        android:name=".StartingScreenActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Line for SignUpScreenActivity -->
    <activity android:name=".SignUpScreenActivity" />

    <!-- Line for SignInScreenActivity -->
    <activity android:name=".SignInScreenActivity" />

    <!-- Line for com.example.rt_oct.ForgotPasswordScreenActivity -->
    <activity android:name=".ForgotPasswordScreenActivity" />

    <!-- Line for MainStartingScreenActivity -->
    <activity android:name=".MainStartingScreenActivity" />

    <!-- Line for MainScreenActivity -->
    <activity
        android:name=".MainScreenActivity"
        android:windowSoftInputMode="adjustPan">
    </activity>

    <!-- Line for ContactScreenActivity -->
    <activity
        android:name=".ContactScreenActivity"
        android:windowSoftInputMode="adjustPan">
    </activity>
</application>
</manifest>
